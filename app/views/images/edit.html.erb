<h1>Edit Image Information</h1>

<%= form_for :image, url: image_path(@image), method: :patch do |f| %>
<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</p>
<p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', image_path %>
